  <script>
    const bgm = document.getElementById("bgm");
    const btn = document.getElementById("btn");

    // En celulares/navegadores, el audio solo puede iniciar con interacci贸n del usuario.
    function startMusic() {
      if (bgm.paused) {
        bgm.volume = 0.6; // ajusta volumen 0.0 a 1.0
        bgm.play().catch(() => {});
      }
    }

    // Inicia m煤sica al primer toque/clic (en el bot贸n o en la pantalla)
    btn.addEventListener("click", startMusic);
    document.addEventListener("click", startMusic, { once: true });
    document.addEventListener("touchstart", startMusic, { once: true });
  </script>
